doctype html
html(lang='en')
head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='shortcut icon', href='../../assets/ico/favicon.ico')
    title Welcome
    //
       Bootstrap core CSS 
    link(href='css/bootstrap.min.css', rel='stylesheet')
    //
       Custom styles for this template 
    link(href='jumbotron.css', rel='stylesheet')
  body
    .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') Node.js Blogger
    //
       Main jumbotron for a primary marketing message or call to action 
    .jumbotron
      .container
        h1 New Blog Post
    .container
      .panel.panel-default
        .panel-heading Create New Post
        .panel-body
          form(method='POST', action='newPost')
            .form-group
              label(for='title') Title
              .input-group
                input.form-control(name='title', type='text', placeholder='Enter a Title')
              p
              label(for='blogContent') Body
              .input-group
                textarea(name='blogcontent', cols='150', rows='14', placeholder='Enter Blog Message')
              p
              label(for='activity') Tags
              br
              input(type='checkbox', name='activity', value='design')
              | Design
              input(type='checkbox', name='activity', value='programming')
              | Programming
              input(type='checkbox', name='activity', value='technology')
              | Technology
              input(type='checkbox', name='activity', value='architecture')
              | Architecture
              input(type='checkbox', name='activity', value='analytics')
              | Analytics
              p
              br
              button.btn.btn-primary.btn-lg(type='submit') Submit Post
      hr
      footer
        p    © Merck 2014
    //
       /container 